{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "ESNext"],
    "baseUrl": ".",
    "module": "node16",
    "moduleResolution": "node16",
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "noEmit": false,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["src/mixi.proto"]
}
